<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Upcoming Events:<br/ >
      </h1><br/ >
      <br/ >
        <ul style="list-style: none;">
          <% Event.upcoming.each do | event | %>
            <li><%= link_to event.name, event %></li><br/ >
          <% end %>
        </ul>  
      <h1>
        Previous Events:<br/ >
      </h1><br/ >
      <br/ >
        <ul style="list-style: none;">
          <% Event.past.each do | event | %>
            <li><%= link_to event.name, event %></li><br/ >
          <% end %>
        </ul>              
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.created_events.any? %>
      <h3><%= @user.name.possessive %> Events Created (<%= @user.created_events.count %>)</h3>
      <ol class="microposts">
        <% @user.created_events.each do | event | %>
        	<li> 
        	<h4><%= link_to event.name, event %></h4>
        	<strong>Location: </strong> <%= event.location %><br/ >
        	<strong>Date: </strong><%= event.date %><br/ ><br/ >
        	<%= event.description %>
        	</li>
    	<% end %>
      </ol>
    <% end %>
  </div>  
</div>
